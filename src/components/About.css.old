/*==================*/
/* Global Styles */
/*==================*/
.about-us {
  font-family: "Segoe UI", sans-serif;
  color: #333;
  padding: 0;
  margin: 0;
  width: 100%;
  overflow-x: hidden;
}

section {
  padding: 4rem 0;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 3rem;
  color: #2e7d32;
  position: relative;
}

.section-title:after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background-color: #4caf50;
  border-radius: 2px;
}

/*============================*/
/* Container Styles */
/*============================*/
.about-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  width: 90%;
}

/*============================*/
/* Hero Section */
/*============================*/
.about-hero {
  background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1589733955941-5eeaf752f6dd?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
  background-size: cover;
  background-position: center;
  height: 500px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 2rem;
  position: relative;
  overflow: hidden;
}

.about-hero:after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(76, 175, 80, 0.4), rgba(46, 125, 50, 0.4));
  z-index: 0;
}

.hero-content {
  text-align: center;
  color: #fff;
  max-width: 800px;
  padding: 2rem;
  position: relative;
  z-index: 1;
}

.hero-content h1 {
  font-size: 4rem;
  margin-bottom: 1rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}

.hero-content p {
  font-size: 1.5rem;
  margin-bottom: 2rem;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
}

/*============================*/
/* Mission Section */
/*============================*/
.mission-section {
  background-color: #f9f9f9;
}

.mission-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 3rem;
}

.mission-text {
  flex: 1;
}

.mission-text h2 {
  font-size: 2.2rem;
  color: #2e7d32;
  margin-bottom: 1rem;
}

.mission-text p {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #555;
}

.mission-graphic {
  flex: 1;
  display: flex;
  justify-content: center;
}

.circular-graphic {
  width: 300px;
  height: 300px;
  background-color: #e8f5e9;
  border-radius: 50%;
  border: 4px solid #4caf50;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  animation: pulse 3s infinite alternate;
}

.circular-graphic:before {
  content: "";
  position: absolute;
  width: 80%;
  height: 80%;
  border-radius: 50%;
  border: 2px dashed #4caf50;
}

.circular-graphic span {
  font-size: 1.5rem;
  font-weight: 600;
  color: #2e7d32;
  padding: 0.5rem 1rem;
  background-color: white;
  border-radius: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin: 0.5rem 0;
  position: absolute;
}

.circular-graphic span:nth-child(1) {
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
}

.circular-graphic span:nth-child(2) {
  top: 50%;
  left: 15%;
  transform: translateY(-50%);
}

.circular-graphic span:nth-child(3) {
  top: 50%;
  right: 15%;
  transform: translateY(-50%);
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(76, 175, 80, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0);
  }
}

/*============================*/
/* Values Section */
/*============================*/
.values-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.value-card {
  background-color: white;
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  height: 100%;
}

.value-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.value-icon {
  width: 80px;
  height: 80px;
  background-color: #e8f5e9;
  border-radius: 50%;
  margin: 0 auto 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.value-icon:before {
  font-family: "FontAwesome";
  font-size: 2rem;
  color: #4caf50;
}

.quality-icon:before {
  content: "ü•ù";
  font-size: 2.5rem;
}

.sustainability-icon:before {
  content: "üå±";
  font-size: 2.5rem;
}

.community-icon:before {
  content: "ü§ù";
  font-size: 2.5rem;
}

.value-card h3 {
  font-size: 1.5rem;
  color: #2e7d32;
  margin-bottom: 1rem;
}

.value-card p {
  font-size: 1rem;
  color: #666;
  line-height: 1.6;
}

/*============================*/
/* Journey Timeline Section */
/*============================*/
.journey-section {
  background-color: #f9f9f9;
  position: relative;
}

.timeline {
  position: relative;
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.timeline:before {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  width: 4px;
  background-color: #4caf50;
  left: 50%;
  transform: translateX(-50%);
}

.timeline-item {
  padding: 1.5rem 0;
  position: relative;
  width: 50%;
  box-sizing: border-box;
}

.timeline-item:nth-child(odd) {
  left: 0;
  padding-right: 40px;
  text-align: right;
}

.timeline-item:nth-child(even) {
  left: 50%;
  padding-left: 40px;
}

.timeline-dot {
  position: absolute;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background-color: #4caf50;
  top: 2rem;
  z-index: 1;
  animation: dot-pulse 2s infinite;
}

.timeline-item:nth-child(odd) .timeline-dot {
  right: -12px;
}

.timeline-item:nth-child(even) .timeline-dot {
  left: -12px;
}

.timeline-content {
  background-color: white;
  padding: 1.5rem;
  border-radius: 8px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
}

.timeline-content h3 {
  font-size: 1.5rem;
  color: #2e7d32;
  margin-bottom: 0.5rem;
}

.timeline-content p {
  font-size: 1rem;
  color: #666;
}

/*============================*/
/* Team Section */
/*============================*/
.team-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.team-card {
  background-color: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  text-align: center;
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.team-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.team-image {
  height: 250px;
  background-color: #e8f5e9;
  background-size: cover;
  background-position: center;
}

.team-image-1 {
  background-image: url('https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.team-image-2 {
  background-image: url('https://images.unsplash.com/photo-1560250097-0b93528c311a?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.team-image-3 {
  background-image: url('https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.team-card h3 {
  font-size: 1.5rem;
  color: #2e7d32;
  margin: 1rem 0 0.5rem;
}

.team-role {
  color: #4caf50;
  font-weight: 600;
  margin-bottom: 1rem;
}

.team-card p {
  font-size: 0.95rem;
  color: #666;
  line-height: 1.6;
  padding: 0 1.5rem 1.5rem;
}

/*============================*/
/* Testimonials Section */
/*============================*/
.testimonials-section {
  background-color: #f9f9f9;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.testimonial {
  background-color: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.testimonial:hover {
  transform: scale(1.02);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.quote-icon {
  font-size: 3rem;
  color: #e8f5e9;
  position: absolute;
  top: 1rem;
  left: 1rem;
}

.quote-icon:before {
  content: """;
  font-family: Georgia, serif;
  font-size: 4rem;
  color: #e8f5e9;
}

.testimonial p {
  font-size: 1rem;
  line-height: 1.6;
  color: #555;
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 1;
}

.testimonial-author {
  display: flex;
  align-items: center;
}

.author-image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: #e8f5e9;
  margin-right: 1rem;
  background-size: cover;
  background-position: center;
}

.author-image-1 {
  background-image: url('https://images.unsplash.com/photo-1567532939604-b6b5b0db2604?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.author-image-2 {
  background-image: url('https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.author-image-3 {
  background-image: url('https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80');
}

.author-details h4 {
  font-size: 1.1rem;
  color: #2e7d32;
  margin: 0;
}

.author-details p {
  font-size: 0.9rem;
  color: #777;
  margin: 0;
}

/*============================*/
/* Responsive Styles */
/*============================*/
@media (max-width: 992px) {
  .hero-content h1 {
    font-size: 3rem;
  }
  
  .mission-content {
    flex-direction: column;
  }
  
  .section-title {
    font-size: 2.2rem;
  }
}

@media (max-width: 768px) {
  .about-container {
    padding: 1.5rem;
  }
  
  .timeline:before {
    left: 40px;
  }
  
  .timeline-item {
    width: 100%;
    padding-left: 70px;
    padding-right: 0;
    text-align: left;
  }
  
  .timeline-item:nth-child(odd) {
    left: 0;
    padding-right: 0;
    text-align: left;
  }
  
  .timeline-item:nth-child(even) {
    left: 0;
  }
  
  .timeline-item:nth-child(odd) .timeline-dot,
  .timeline-item:nth-child(even) .timeline-dot {
    left: 28px;
  }
  
  .hero-content h1 {
    font-size: 2.5rem;
  }
  
  .hero-content p {
    font-size: 1.2rem;
  }
  
  .mission-text h2 {
    font-size: 1.8rem;
  }
  
  .circular-graphic {
    width: 250px;
    height: 250px;
  }
}

@media (max-width: 576px) {
  .hero-content h1 {
    font-size: 2rem;
  }
  
  .hero-content p {
    font-size: 1rem;
  }
  
  .section-title {
    font-size: 1.8rem;
  }
  
  .section-title:after {
    width: 60px;
  }
  
  .mission-text h2 {
    font-size: 1.5rem;
  }
  
  .circular-graphic {
    width: 200px;
    height: 200px;
  }
  
  .circular-graphic span {
    font-size: 1.2rem;
  }
  
  .testimonial {
    padding: 1.5rem;
  }
}

/* Animation Enhancements */
[data-aos] {
  opacity: 0;
  transition-property: opacity, transform;
  transition-duration: 0.8s;
  transition-timing-function: cubic-bezier(0.16, 1, 0.3, 1);
}

[data-aos].aos-animate {
  opacity: 1;
}

/* Custom animation for each section */
.hero-content [data-aos='fade-down'] {  transform: translateY(-50px);}.hero-content [data-aos='fade-down'].aos-animate {  transform: translateY(0);}[data-aos='fade-up'] {  transform: translateY(50px);}[data-aos='fade-up'].aos-animate {  transform: translateY(0);}[data-aos='fade-right'] {  transform: translateX(-50px);}[data-aos='fade-right'].aos-animate {  transform: translateX(0);}[data-aos='fade-left'] {  transform: translateX(50px);}[data-aos='fade-left'].aos-animate {  transform: translateX(0);}[data-aos='flip-left'] {  transform: perspective(2500px) rotateY(-90deg);}[data-aos='flip-left'].aos-animate {  transform: perspective(2500px) rotateY(0);}

[data-aos='zoom-in'] {  transform: scale(0.6);}

[data-aos='zoom-in'].aos-animate {  transform: scale(1);}

/* Additional hover animations */
.value-card:hover, .team-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.testimonial:hover {
  transform: scale(1.02);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

/* Subtle background animation */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(76, 175, 80, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0);
  }
}

/* Timeline dot pulsing effect */
@keyframes dot-pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.4);
  }
  70% {
    box-shadow: 0 0 0 8px rgba(76, 175, 80, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(76, 175, 80, 0);
  }
}
